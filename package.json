    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.2.0",
    "@preact/signals": "^2.7.0",
    "fastify": "^5.7.4",
    "preact": "^10.28.3",
